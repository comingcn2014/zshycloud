<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zshy.system.mapper.SysRouteMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.zshy.system.entity.SysRoute">
        <result column="id" property="id"/>
        <result column="name" property="name"/>
        <result column="path" property="path"/>
        <result column="url" property="url"/>
        <result column="service_id" property="serviceId"/>
        <result column="status" property="status"/>
        <result column="create_by" property="createBy"/>
        <result column="update_by" property="updateBy"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
        <result column="is_deleted" property="isDeleted"/>
        <result column="tenant_id" property="tenantId"/>
    </resultMap>

    <resultMap id="routeVOResultMap" type="com.zshy.system.vo.SysRouteVO">
        <id column="id" property="id"/>
        <result column="name" property="name"/>
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id,
                name, path, url, service_id, status, create_by, update_by, create_time, update_time, is_deleted, tenant_id
    </sql>

    <select id="listItem" resultMap="routeVOResultMap">
        select id, service_id as name from zshy_sys_route order by create_time
    </select>

</mapper>
